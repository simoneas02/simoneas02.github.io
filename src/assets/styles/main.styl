/* Custom Properties
=========================================== */
:root {
  --external-spacing: 20px;
  --internal-spacing: 10px;
  --main-color: #56038f;
}

border()
  border: 0 dashed;

* {
  box-sizing: border-box;
}

body {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  background-color: #212121;
}

.header {
  border()
  border-top: 5px solid var(--main-color);
  text-align: center;
  margin-bottom: var(--external-spacing);
  padding: var(--internal-spacing);
}

.profile-picture {
  border()
  border-radius: 50%;
  margin: var(--external-spacing) 0;
  width: 100%;
  max-width: 200px;
}

.heading-highlight {
  color: #fff;
  font-weight: 300;
}
.heading-lv1 {
  border()
  color: var(--main-color);
  margin: var(--external-spacing) 0;
  padding: var(--internal-spacing) 0;
  text-align: center;
}

.text {
  border()
  color: #fff;
  font-family: robo;
  font-size: 16px;
  margin: var(--external-spacing) auto;
  padding: var(--internal-spacing);
  text-align: center;
  width: 100%;
  max-width: 600px;
}

.bold {
  color: var(--main-color);
  font-family: roboto;
  font-size: 16px;
}

.icons-list {
  border()
  padding-left: 0;
  text-align: center;
}

.icon-item {
  list-style: none;
  display: inline-block;
  margin: calc(var(--external-spacing)/3);
}

.icon-link {

}

.icon-svg {

}

.footer {
  background: var(--main-color);
  border()
  color: #fff;
  margin-top: var(--external-spacing);
  padding: var(--internal-spacing);
  text-align: center;
}
